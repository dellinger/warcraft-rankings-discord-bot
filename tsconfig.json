{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir" : "src",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMaps": true
  },
  "filesGlob": [
        "src/**/*.ts",
        "typings/tsd.d.ts"
    ],
  "exclude": [
        "node_modules",
        "typings"]
}